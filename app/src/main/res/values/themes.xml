<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BachelorWork" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.BachelorWork" parent="Base.Theme.BachelorWork">
        <!--<item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>-->

    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <!--<item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="enableEdgeToEdge">true</item>-->
    </style>

    <style name="Theme.App.NumberPicker" parent="Theme.BachelorWork">
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.ImageView.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="ShapeAppearanceOverlay.Corner.Rounded.Bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
    </style>

    <style name="ChartStyle">
        <item name="layers">column</item>
        <item name="showBottomAxis">true</item>
        <item name="showStartAxis">true</item>
        <item name="showDataLabels">true</item>
    </style>


    <style name="Widget.AppCompat.Button.Profile" parent="Widget.Material3.Button">

        <item name="shapeAppearance">@style/ShapeAppearance.App.Button.Profile</item>"
    </style>

    <style name="ShapeAppearance.App.Button.Profile" parent="">
        <item name="shapeCornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="Custom.EditTextLayout.OrganisationSettings" parent="ThemeOverlay.Material3.TextInputEditText">
        
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>