<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_extra_small">

    <LinearLayout
        android:id="@+id/layout_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_view_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:text="@string/text_today"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_today"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/black"
            android:src="@drawable/ic_done"
            android:layout_margin="@dimen/margin_normal"
            android:visibility="invisible"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ImageView.Circle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_three_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_view_three_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:text="@string/text_three_days"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_three_days"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/black"
            android:src="@drawable/ic_done"
            android:layout_margin="@dimen/margin_normal"
            android:visibility="invisible"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ImageView.Circle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_last_seven_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_view_last_seven_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:text="@string/text_last_seven_days"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_last_seven_days"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/black"
            android:src="@drawable/ic_done"
            android:layout_margin="@dimen/margin_normal"
            android:visibility="invisible"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ImageView.Circle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_last_thirty_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_view_last_thirty_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:text="@string/text_last_thirty_days"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_last_thirty_days"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/black"
            android:src="@drawable/ic_done"
            android:layout_margin="@dimen/margin_normal"
            android:visibility="invisible"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ImageView.Circle" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_last_ninety_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_view_last_ninety_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:text="@string/text_last_ninety_days"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_last_ninety_days"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/black"
            android:src="@drawable/ic_done"
            android:layout_margin="@dimen/margin_normal"
            android:visibility="invisible"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ImageView.Circle" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_last_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_view_last_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:text="@string/text_last_year"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_last_year"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/black"
            android:src="@drawable/ic_done"
            android:layout_margin="@dimen/margin_normal"
            android:visibility="invisible"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ImageView.Circle" />

    </LinearLayout>


</LinearLayout>