<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/productNameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:text="Product Name"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/qtyOrderedHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:text="Qty Ordered"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/qtyInHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:text="Qty In"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/qtyOutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:text="Qty Out"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/stockOnHandHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:text="Stock On Hand"
        android:textColor="@color/black"/>

</LinearLayout>