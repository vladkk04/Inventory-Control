<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/padding_normal"
    android:weightSum="1">

    <TextView
        android:id="@+id/text_view_category"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="start|center"
        android:textSize="@dimen/text_size_medium_plus"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="ksdsfjkdlkfjksfdjdfjksjkflsdjkl;dfsjfksdl" />

    <CheckBox
        android:id="@+id/check_box_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:button="@drawable/ic_edit"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <CheckBox
        android:id="@+id/check_box_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:button="@drawable/ic_delete"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</LinearLayout>