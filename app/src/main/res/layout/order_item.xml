<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    app:contentPadding="@dimen/padding_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/check_box_navigate"
            android:text="@string/text_order_id"
            tools:text = "Order# 930284222342423424343298"
            android:ellipsize="end"
            android:maxLength="30"
            android:maxLines="1"
            android:textSize="@dimen/text_size_large_plus" />

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_id"
            android:layout_marginVertical="@dimen/margin_extra_small"
            android:text="@string/text_order_date_timestamp"
            android:textSize="@dimen/text_size_extra_small"
            tools:text="@tools:sample/date/mmddyy"/>

        <CheckBox
            android:id="@+id/check_box_navigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:button="@drawable/ic_keyboard_arrow_right" />

        <TextView
            android:id="@+id/textView_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_box_navigate"
            android:layout_marginVertical="@dimen/margin_small"
            android:text="@string/text_total"
            android:textSize="@dimen/text_size_medium_plus" />

        <TextView
            android:id="@+id/textView_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_box_navigate"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="@dimen/margin_small"
            android:layout_toEndOf="@+id/textView_total"
            android:textAlignment="textEnd"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:text="@string/text_order_total"
            android:textSize="@dimen/text_size_medium_plus"
            tools:text="93028422234723424343298$" />


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>