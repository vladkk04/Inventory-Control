<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/margin_small"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ImageView.Circle"
        app:srcCompat="@drawable/cup" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/checkbox_manage"
        android:layout_toEndOf="@+id/shapeableImageView"
        android:text="Vladyslav Klymiuk"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_name"
        android:layout_toStartOf="@+id/checkbox_manage"
        android:layout_toEndOf="@+id/shapeableImageView"
        android:text="vladyslav.klymiuk@tuke.sk"
        android:textSize="@dimen/text_size_small" />

    <CheckBox
        android:id="@+id/checkbox_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:button="@drawable/ic_more_horizontal" />

</RelativeLayout>