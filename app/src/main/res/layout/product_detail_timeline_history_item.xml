<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/line"
        android:layout_width="3dp"
        android:layout_height="60dp"
        android:layout_below="@+id/circle"
        android:layout_alignEnd="@+id/circle"
        android:layout_marginEnd="12dp"
        android:background="#565353" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/circle"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/padding_extra_small">

        <ImageView
            android:id="@+id/imageView_timeline_about"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_edit" />

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:layout_toEndOf="@+id/circle"
        app:contentPadding="@dimen/padding_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Product Created"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="ysjdfklsdlkfjsdsdjfklsjkldsjflskdjfklsdjflksadjfl;ksjdflkldksjfkldsjfklsdjf"
                android:textSize="11sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>