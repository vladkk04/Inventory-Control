<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:paddingHorizontal="@dimen/padding_extra_small">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_manage_users"
            android:layout_width="@dimen/width_more_fab_item"
            android:layout_height="@dimen/height_more_fab_item"
            android:maxLines="2"
            android:text="@string/text_manage_users"
            android:layout_row="0"
            android:layout_column="0"
            app:icon="@drawable/ic_manage_users"
            app:iconGravity="top"
            app:iconPadding="0dp" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_manage_organisation"
            android:layout_width="@dimen/width_more_fab_item"
            android:layout_height="@dimen/height_more_fab_item"
            android:maxLines="2"
            android:text="@string/text_manage_organisation"
            android:ellipsize="end"
            android:layout_row="0"
            android:layout_column="1"
            app:icon="@drawable/ic_building"
            app:iconGravity="top"
            app:iconPadding="0dp" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_organisation_settings"
            android:layout_width="@dimen/width_more_fab_item"
            android:layout_height="@dimen/height_more_fab_item"
            android:maxLines="2"
            android:text="@string/text_organisation_settings"
            android:ellipsize="end"
            android:maxLength="25"
            android:layout_row="0"
            android:layout_column="2"
            app:icon="@drawable/ic_settings"
            app:iconGravity="top"
            app:iconPadding="0dp" />

    </GridLayout>

</LinearLayout>

